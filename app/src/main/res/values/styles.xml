<resources>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/main_red</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/main_red</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <!-- toolbar字体颜色 -->
        <item name="android:textColorPrimary">@color/main_light_black</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <!--搜索样式-->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!--Background for the search query section -->
        <item name="queryBackground">@android:color/transparent</item>
        <!--Background for the actions section (e.g. voice, submit)-->
        <item name="submitBackground">@android:color/transparent</item>
        <!--Search button icon-->
        <item name="searchIcon">@mipmap/ic_search_white_24dp</item>
    </style>

    <!--返回按钮-->
    <style name="AppTheme.DrawerArrowToggle"
           parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgrey</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- 自定item的dialog的样式 -->
    <style name="item_dialog" parent="android:style/Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--启动图的样式-->
    <style name="StartStyle" parent="android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/loading</item>
    </style>

    <!--tab样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/main_light_white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/gray</item>
    </style>

</resources>

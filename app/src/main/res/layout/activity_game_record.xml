<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_game_record"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_light_white"
    tools:context="com.jiangtao.shuzicaimanager.model.statistical.user.GameRecordActivity">

    <!--toolbar-->
    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/offset_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:layout_weight="1"
            android:text="涨跌预测总数"/>

        <TextView
            android:id="@+id/forecastTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="123"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/offset_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:layout_weight="1"
            android:text="尾数预测总数"/>

        <TextView
            android:id="@+id/mantissaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="123"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/offset_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:layout_weight="1"
            android:text="全数预测总数"/>

        <TextView
            android:id="@+id/wholeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="123"/>

    </LinearLayout>

</LinearLayout>

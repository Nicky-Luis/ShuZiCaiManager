<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/user_count_item_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="@dimen/offset_4dp">

    <TextView
        android:id="@+id/wealth_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_4dp"
        android:text="2017-02-03"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wealthUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:layout_weight="1"
            android:text="名字"/>

        <TextView
            android:id="@+id/wealthCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="30元"/>
    </LinearLayout>

    <TextView
        android:id="@+id/transactionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_4dp"
        android:text="交易号：51768778"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/online_goods_item_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/offset_4dp"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/offset_4dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/online_goods_img"
        android:layout_width="@dimen/offset_48dp"
        android:layout_height="@dimen/offset_48dp"
        android:background="@color/main_light_white"
        android:scaleType="centerCrop"
        app:placeholderImage="@mipmap/icon"/>

    <TextView
        android:id="@+id/online_goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_4dp"
        android:layout_weight="1"
        android:text="虚拟商品"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/online_goods_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="剩余："/>

        <TextView
            android:id="@+id/online_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_4dp"
            android:text="价格："/>
    </LinearLayout>


</LinearLayout>

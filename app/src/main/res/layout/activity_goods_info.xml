<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_goods_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiangtao.shuzicaimanager.model.statistical.goods.GoodsInfoActivity">

    <!--toolbar-->
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/goods_info_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_260dp"
                android:background="@color/main_light_white"
                android:scaleType="centerCrop"
                app:placeholderImage="@mipmap/icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginTop="@dimen/offset_20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/offset_4dp"
                    android:text="商品名称"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <TextView
                    android:id="@+id/goods_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:text="商品名称"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/offset_4dp"
                    android:text="商品名称"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <TextView
                    android:id="@+id/goods_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:text="40金币"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/offset_4dp"
                    android:text="商品类型"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <TextView
                    android:id="@+id/goods_info_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:text="商品描述"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <TextView
                    android:id="@+id/goods_info_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:text=" "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginTop="@dimen/offset_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/offset_2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/offset_4dp"
                    android:text="库存"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <TextView
                    android:id="@+id/goods_info_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset_4dp"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_normal"/>

                <Button
                    android:id="@+id/goods_info_inventory_add"
                    android:layout_width="@dimen/offset_40dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="@dimen/font_size_xlarge_high"/>

                <Button
                    android:id="@+id/goods_info_inventory_sub"
                    android:layout_width="@dimen/offset_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_2dp"
                    android:text="-"
                    android:textSize="@dimen/font_size_xlarge_high"/>
            </LinearLayout>


            <Button
                android:id="@+id/delete_Goods_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_20dp"
                android:layout_marginRight="@dimen/offset_20dp"
                android:layout_marginTop="@dimen/offset_28dp"
                android:background="@color/main_red"
                android:layout_marginBottom="@dimen/offset_48dp"
                android:text="删除该商品"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

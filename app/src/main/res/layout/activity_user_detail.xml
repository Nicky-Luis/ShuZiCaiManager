<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_user_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light_white"
    android:orientation="vertical"
    tools:context="com.jiangtao.shuzicaimanager.model.statistical.UserDetailActivity">

    <!--toolbar-->
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitesmoke"
        android:padding="@dimen/offset_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/userDetailImg"
                        android:layout_width="@dimen/offset_68dp"
                        android:layout_height="@dimen/offset_68dp"
                        android:layout_margin="@dimen/offset_10dp"
                        android:background="@color/main_light_white"
                        android:scaleType="centerCrop"
                        app:placeholderImage="@mipmap/icon"
                        fresco:roundAsCircle="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userDetailName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/offset_4dp"
                                android:text="名字"/>

                            <TextView
                                android:id="@+id/userDetailStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/offset_4dp"
                                android:text="状态"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userDetailCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/offset_4dp"
                                android:text="广州"/>

                            <TextView
                                android:id="@+id/userDetailSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/offset_4dp"
                                android:text="男"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/userDetailRegisterTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:text="注册时间"/>

                <TextView
                    android:id="@+id/userDetailAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:text="账户"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="金币总数"/>

                <TextView
                    android:id="@+id/userDetailGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:text="123"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="银币总数"/>

                <TextView
                    android:id="@+id/userDetailSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:text="123"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="游戏记录"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_more"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="充值记录"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="兑奖记录"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_more"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/offset_10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/offset_4dp"
                    android:layout_weight="1"
                    android:text="邀请状态"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_more"/>
            </LinearLayout>

            <Button
                android:id="@+id/deleteUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/offset_20dp"
                android:text="拉黑用户"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
